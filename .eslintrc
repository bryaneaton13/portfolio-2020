{
  "extends": ["react-app"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "classes": true
    }
  },
  "plugins": ["eslint-plugin-react"],
  "globals": {
    "tw": true
  },
  "env": {
    "browser": true,
    "node": true,
    "jquery": true
  },
  "rules": {
    "semi": 2,
    "prettier/prettier": 0,
    "no-undef": ["error", 2],
    "no-mixed-spaces-and-tabs": ["error"],
    "react/jsx-indent": ["error", 2],
    "react/jsx-indent-props": [2, 2]
  }
}
